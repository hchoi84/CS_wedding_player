@{ ViewData["Title"] = "Home Page"; }
@model LogRegModel

<div class="text-center">
	<h1 class="display-4">Welcome</h1>
	<p>@ViewBag.TempMsg</p>

	<div class="d-md-flex h-md-60 align-items-center">
		<div class="col-md-6 p-0 h-md-60">
			<div class="d-md-flex align-items-center h-100 p-2 text-center justify-content-center">
				<div class="pt-2 pb-2 width80">
					<form asp-action="LoginUser" asp-controller="Home" method="post">
						<div class="form-group">
							<label asp-for="Login.Email" class="font-weight-bold"></label>
							<input asp-for="Login.Email" class="form-control">
							<span asp-validation-for="Login.Email"></span>
						</div>
						<div class="form-group">
							<label asp-for="Login.Password" class="font-weight-bold"></label>
							<input asp-for="Login.Password" class="form-control">
							<span asp-validation-for="Login.Password"></span>
						</div>
						<button type="submit" class="btn btn-primary">Login</button>
					</form>
				</div>
			</div>
		</div>

		<div class="col-md-6 p-0 bg-white h-md-60 loginarea">
			<div class="d-md-flex align-items-center h-md-60 p-2 justify-content-center">
				<div class="pt-2 pb-2 width80">
					<form asp-action="CreateUser" asp-controller="Home" method="post">
						<div class="form-group">
								<label asp-for="User.FirstName" class="font-weight-bold"></label>
								<input asp-for="User.FirstName" class="form-control">
								<span asp-validation-for="User.FirstName"></span>
						</div>
						<div class="form-group">
								<label asp-for="User.LastName" class="font-weight-bold"></label>
								<input asp-for="User.LastName" class="form-control">
								<span asp-validation-for="User.LastName"></span>
						</div>
						<div class="form-group">
								<label asp-for="User.Email" class="font-weight-bold"></label>
								<input asp-for="User.Email" class="form-control">
								<span asp-validation-for="User.Email"></span>
						</div>
						<div class="form-group">
								<label asp-for="User.Password" class="font-weight-bold"></label>
								<input asp-for="User.Password" class="form-control">
								<span asp-validation-for="User.Password"></span>
						</div>
						<div class="form-group">
								<label asp-for="User.Confirm" class="font-weight-bold"></label>
								<input asp-for="User.Confirm" class="form-control">
								<span asp-validation-for="User.Confirm"></span>
						</div>
						<button type="submit" class="btn btn-primary">Register</button>
					</form>
				</div>
			</div>
		</div>

	</div>
	
</div>
