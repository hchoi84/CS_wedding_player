@{ ViewData["Title"] = "Home Page"; }
@model WeddingModel

<div class="text-center">
  <h1>Plan your Wedding</h1>

	<div class="d-md-flex h-md-60 align-items-center">
		<div class="col-md-6 p-0 h-md-60">
			<div class="d-md-flex align-items-center h-100 p-2 text-center justify-content-center">
				<div class="pt-2 pb-2 width80">
					<form asp-action="CreateWedding" asp-controller="Home" method="post">
						<div class="form-group">
							<label asp-for="WedderOne" class="font-weight-bold"></label>
							<input asp-for="WedderOne" class="form-control">
							<span asp-validation-for="WedderOne"></span>
						</div>
						<div class="form-group">
							<label asp-for="WedderTwo" class="font-weight-bold"></label>
							<input asp-for="WedderTwo" class="form-control">
							<span asp-validation-for="WedderTwo"></span>
						</div>
						<div class="form-group">
							<label asp-for="Date" class="font-weight-bold"></label>
							<input asp-for="Date" class="form-control">
							<span asp-validation-for="Date"></span>
						</div>
						<div class="form-group">
							<label asp-for="Address" class="font-weight-bold"></label>
							<input asp-for="Address" class="form-control">
							<span asp-validation-for="Address"></span>
						</div>
						<button type="submit" class="btn btn-primary">Create</button>
					</form>
				</div>
			</div>
		</div>

		<div class="col-md-6 p-0 bg-white h-md-60 loginarea">
			<div class="d-md-flex align-items-center h-md-60 p-2 justify-content-center">
				<div class="pt-2 pb-2 width80">
					
				</div>
			</div>
		</div>

	</div>

</div>